<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CategoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250.00dp"

        android:background="@drawable/shape">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_15sdp"
            android:src="@drawable/ic_back" />
        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:textSize="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"/>
</RelativeLayout>

    <EditText
        android:id="@+id/cateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_260sdp"
        android:textColorHint="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_baseline_menu_book_24"
        android:padding="@dimen/_10sdp"
        android:hint="القسم" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  تأكيد "
        android:background="@drawable/shape00"
        android:layout_below="@+id/cateET"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="#FFF"
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold" />

</RelativeLayout>
